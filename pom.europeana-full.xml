<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>eu.europeana</groupId>
	<artifactId>europeana-full</artifactId>
	<version>1</version>
	<packaging>pom</packaging>

	<parent>
		<groupId>eu.europeana</groupId>
		<artifactId>europeana</artifactId>
		<version>1</version>
		<relativePath>pom.xml</relativePath>
	</parent>
 
	<modules>
		<module>core</module>
		<module>api</module>
		<module>portal-lite</module>
		<module>portal-full</module>
		<module>dashboard</module>
		<module>sip-creator</module>
	</modules>

    <scm>
      <connection>scm:svn:https://europeanalabs.eu/svn/europeana/</connection>
      <developerConnection>scm:svn:https://europeanalabs.eu/svn/europeana/</developerConnection>
      <tag>HEAD</tag>
      <url>https://europeanalabs.eu/svn/europeana/</url>
    </scm>

	<build>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>buildnumber-maven-plugin</artifactId>
				<version>1.0-beta-4</version>
				<configuration>
					<providerImplementations>
						<svn>javasvn</svn>
					</providerImplementations>
				</configuration>
				<executions>
					<execution>
						<phase>validate</phase>
						<goals>
							<goal>create</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<id>compile</id>
						<phase>validate</phase>
						<configuration>
							<tasks>
                                <echo message="Build tag: ${buildNumber}" file="portal-full/src/main/webapp/build.txt" />
							</tasks>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
