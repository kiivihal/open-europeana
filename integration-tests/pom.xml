<project>
    <modelVersion>4.0.0</modelVersion>
    <groupId>eu.europeana</groupId>
    <artifactId>integration-tests</artifactId>
    <packaging>war</packaging>
    <name>Europeana Portal integration tests</name>
    <version>0.1</version>
    <description>Integraton tests of the Europeana Portal Web Application</description>
    <inceptionYear>2010</inceptionYear>

    <parent>
        <groupId>eu.europeana</groupId>
        <artifactId>europeana</artifactId>
        <version>1</version>
    </parent>

    <scm>
      <connection>scm:svn:http://europeanalabs.eu/svn/europeana</connection>
      <developerConnection>scm:svn:http://europeanalabs.eu/svn/europeana</developerConnection>
      <tag>HEAD</tag>
      <url>http://europeanalabs.eu/svn/europeana</url>
    </scm>

    <developers>
        <developer>
            <name>Sjoerd Siebinga</name>
            <email>sjoerd.siebinga@gmail.com</email>
            <roles>
                <role>architect</role>
            </roles>
        </developer>
        <developer>
            <name>Gerald de Jong</name>
            <email>geralddejong@gmail.com</email>
            <roles>
                <role>consultant</role>
            </roles>
        </developer>
        <developer>
            <name>Borys Omelayenko</name>
            <email>borys.omelayenko@kb.nl</email>
            <roles>
                <role>developer</role>
            </roles>
        </developer>
    </developers>

    <organization>
        <name>Europeana</name>
        <url>http://www.europeana.eu</url>
    </organization>

	<build>
		<defaultGoal>package</defaultGoal>
		<finalName>portal</finalName>
		<plugins>
		    <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>1.1</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>java</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <mainClass>eu.europeana.PortalFullStarter</mainClass>
                    <classpathScope>test</classpathScope>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>eu.europeana</groupId>
            <artifactId>portal-full</artifactId>
            <version>${europeana.portal.version}</version>
            <type>war</type>
        </dependency>
        <dependency>
            <groupId>eu.europeana</groupId>
            <artifactId>core</artifactId>
            <version>${europeana.core.version}</version>
         </dependency>
        <dependency>
            <groupId>org.mortbay.jetty</groupId>
            <artifactId>jetty</artifactId>
        </dependency>
        <dependency>
            <groupId>net.sourceforge.htmlunit</groupId>
            <artifactId>htmlunit</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework.security</groupId>
            <artifactId>spring-security-web</artifactId>
        </dependency>
        <dependency>
            <groupId>org.hsqldb</groupId>
            <artifactId>hsqldb</artifactId>
            <scope>test</scope>
        </dependency>
        
      </dependencies>
</project>
