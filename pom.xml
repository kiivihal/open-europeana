        </repository>
        <repository>
            <id>spring-external</id>
            <name>EBR External Release Repository</name>
            <url>http://repository.springsource.com/maven/bundles/external</url>
        </repository>
     </repositories>

    <pluginRepositories>
        <pluginRepository>
            <id>snapshots</id>
            <url>http://europeanalabs.eu/artifactory/repo</url>
        </pluginRepository>
    </pluginRepositories>

    <modules>
        <module>core</module>
        <module>api</module>
        <module>portal-lite</module>
        <module>portal-full</module>
        <module>dashboard</module>
        <module>sip-creator</module>
    </modules>
    <organization>
        <name>Europeana Foundation</name>
        <url>http://www.europeana.eu</url>
    </organization>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                    <encoding>UTF-8</encoding>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.4.3</version>
                <configuration>
                    <groups>regression</groups>
                    <parallel>true</parallel>
                    <systemProperties>
                        <property>
                            <name>europeana.properties</name>
                            <value>../core/src/test/resources/europeana-test.properties</value>
                        </property>
                    </systemProperties>
                </configuration>
            </plugin>
        </plugins>
    </build>
